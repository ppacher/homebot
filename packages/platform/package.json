{
  "name": "@jsmon/platform",
  "version": "0.0.1",
  "description": "Platform library of the jsmon automation development framework",
  "main": "index.js",
  "scripts": {
    "start": "npm run generate-types && npm run generate-src &&  npm run build-src && cp src/proto.{d.ts,js} dist/",
    "build-src": "tsc && cp package.json dist/",
    "generate-src": "pbjs -w commonjs -t static-module -o src/proto.js protobuf/*.proto",
    "generate-types": "pbjs -t static-module protobuf/*.proto | pbts -o src/proto.d.ts - ",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "jsmon"
  ],
  "author": "Patrick Pacher <patrick.pacher@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@jsmon/core": "0.0.1",
    "@types/jest": "^22.2.2",
    "@types/js-yaml": "^3.10.1",
    "@types/node": "^9.4.7",
    "jest": "^22.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "ts-jest": "^22.4.2",
    "typescript": "^2.9.1"
  },
  "peerDependencies": {
    "@jsmon/core": "^0.0.1",
    "reflect-metadata": "^0.1.12",
    "js-yaml": "^3.11.0",
    "rxjs": "^5.5.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov",
      "json",
      "html"
    ]
  },
  "dependencies": {
    "protobufjs": "^6.8.6"
  }
}

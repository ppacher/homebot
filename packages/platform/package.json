{
  "name": "@homebot/platform",
  "version": "0.0.1",
  "description": "Platform library of the HomeBot automation development framework",
  "main": "index.js",
  "scripts": {
    "start": "tsc && cp package.json dist/",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "homebot"
  ],
  "author": "Patrick Pacher <patrick.pacher@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@homebot/core": "0.0.1",
    "@types/jest": "^22.2.2",
    "@types/js-yaml": "^3.10.1",
    "@types/node": "^9.4.7",
    "jest": "^22.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "ts-jest": "^22.4.2",
    "typescript": "^2.7.2"
  },
  "peerDependencies": {
    "@homebot/core": "^0.0.1",
    "reflect-metadata": "^0.1.12",
    "js-yaml": "^3.11.0",
    "rxjs": "^5.5.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov",
      "json",
      "html"
    ]
  }
}

{
  "name": "@jsmon/net",
  "version": "0.0.3",
  "description": "JsMon implementations for common network protocols",
  "main": "index.js",
  "scripts": {
    "start": "npm run build-src",
    "build-src": "tsc && cp package.json dist/",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "jsmon"
  ],
  "author": "Patrick Pacher <patrick.pacher@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@jsmon/core": "0.0.1",
    "@types/jest": "^22.2.2",
    "@types/mqtt": "^2.5.0",
    "@types/nock": "^9.3.0",
    "@types/node": "^9.4.7",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/restify": "^7.2.5",
    "@types/restify-errors": "^4.3.3",
    "jest": "^22.4.3",
    "nock": "^10.0.2",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "restify": "^7.2.2",
    "restify-errors": "^6.1.1",
    "rxjs": "^5.5.6",
    "ts-jest": "^22.4.2",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "@jsmon/core": "^0.0.1",
    "reflect-metadata": "^0.1.12",
    "js-yaml": "^3.11.0",
    "mqtt": "^2.18.8",
    "rxjs": "^5.5.6",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "restify": "^7.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov",
      "json",
      "html"
    ]
  }
}
